<div class="row">
<div class="col-md-4"></div>
    	<div class="col-md-4 text-center">
        <%= gravatar_for user, id: "border", size: 300 %>
    	<div class="col-md-4"></div>

	<div class="col-md-12 text-center">
     <h2> <%= user.name %></h2>
     <h2> <%= user[:title] %></h2>
     <h3>
     <%= link_to "No", users_path, class: "btn btn-large btn-primary" %>
     <%= link_to "Yes", user, class: "btn btn-large btn-primary" %>
 </div>
</div>
