<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 text-center">
  <%= image_tag @user.avatar.url(:thumb), id: "border" %></div>
  <div class="large-4 columns"></div>
</div>

<div class="row" >
  <div class="col-md-4"></div>
  <div class="col-md-4 text-center"><h3><%= @user.name %></h3></div>
  <div class="col-md-4"></div>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 text-center"><h3><%= @user.title %></h3></div>
  <div class="col-md-4"></div>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 text-center">
      <% if current_user = user_path %>
        <button type="button" class="btn btn-primary btn-lg btn-block">Contact <%= @user.name %></button>
      <% else %>
       <button type="button" class="btn btn-primary btn-lg btn-block">Edit Profile</button>
      <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
<%= gravatar_for @user %>

<br>

  </div>
</div>
